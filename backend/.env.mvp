# TALANTA AI Backend - MVP Configuration
# Optimized for lightweight deployment without heavy ML dependencies

# Database Configuration
DATABASE_URL=postgresql://talanta_user:talanta_secure_pass_2024@localhost:5432/talanta_db
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=talanta_graph_pass_2024
REDIS_URL=redis://:talanta_redis_pass_2024@localhost:6379/0

# Object Storage (MinIO/S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=talanta_minio_admin
S3_SECRET_KEY=talanta_minio_secure_pass_2024
S3_BUCKET_NAME=talanta-verifications
S3_REGION=us-east-1

# Security
JWT_SECRET_KEY=change_this_to_a_random_secret_key_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
PHONE_HASH_SALT=change_this_salt_in_production

# =================================================================
# MVP MODE: Lightweight Configuration (No Heavy ML Dependencies)
# =================================================================

# LLM Configuration - MVP MODE: Use keyword-based extraction (no LLM required)
LLM_PROVIDER=mock  # Options: mock (keyword-based), ollama, openai
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=  # Leave empty for MVP

# OCR Configuration - MVP MODE: Use mock OCR (no PaddleOCR required)
OCR_MODE=mock  # Options: mock (sample data), paddleocr (real)

# =================================================================
# To upgrade to production with real ML:
# 1. Install Ollama and run: ollama pull llama3
# 2. Change LLM_PROVIDER to "ollama"
# 3. Install PaddleOCR: pip install paddlepaddle paddleocr
# 4. Change OCR_MODE to "paddleocr"
# =================================================================

# Celery Configuration
CELERY_BROKER_URL=redis://:talanta_redis_pass_2024@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:talanta_redis_pass_2024@localhost:6379/2

# Feature Flags
ENABLE_PII_REDACTION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5

# Rate Limiting (relaxed for MVP)
RATE_LIMIT_PER_MINUTE=100

# SMS Provider (Not needed for MVP - OTP logged to console)
SMS_API_KEY=
SMS_USERNAME=
SMS_SENDER_ID=TALANTA
